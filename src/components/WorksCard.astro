---
interface Props{
    image:string
    title:string
}

const {image, title} = Astro.props
---

<div class="bg-white rounded-2xl flex flex-col justify-evenly items-center py-8 px-2 gap-6">
    <img src={image} alt="card image" class="w-52">
    <h1 class="font-bold text-2xl text-black text-center">{title}</h1>
</div>